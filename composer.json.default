{
  "require": {
    "craftcms/cms": "^3.0.0",
    "vlucas/phpdotenv": "^2.4.0"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"copy('config/local/db.example.php', 'config/local/db.php');\"",
      "@php -r \"copy('config/local/general.example.php', 'config/local/general.php');\""
    ]
  }
}
